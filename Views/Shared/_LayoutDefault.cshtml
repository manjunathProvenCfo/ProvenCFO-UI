</html>
<script>
    $(document).ready(function () {       
        if (localStorage.getItem('SelectedMenu') == null || localStorage.getItem('SelectedMenu') == '') {
            $("#home").addClass("show");
        }
        $("#" + localStorage.getItem('SelectedMenu')).addClass("show");
        $('#navbarVerticalCollapse li a').click(function (event) {

            if (event.currentTarget.parentNode.parentNode.id == '') {
                localStorage.setItem('SelectedMenu', event.currentTarget.nextElementSibling.id)    
            }
            else {
                localStorage.setItem('SelectedMenu', event.currentTarget.parentNode.parentNode.id)   
            }          
        });

    });
</script>
