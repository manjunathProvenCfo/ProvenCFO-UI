
<div class="modal fade " id="myModal" role="dialog">

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">


                <h5 class="modal-title">New Email</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <div class="card-body p-0">
                    <div class="border-bottom border-200">
                        <input class="form-control border-0 outline-none px-card" type="email" aria-describedby="email-to" id="email-to" placeholder="To">
                    </div>
                    <div class="navbar-vertical-divider">

                    </div>
                    <input class="form-control border-0 outline-none px-card" id="email-subject" type="text" aria-describedby="email-subject" placeholder="Subject">

                    <div class="min-vh-50" id="ibody">


                        <input class="form-control border-0 outline-none px-card" >
                    </div>

                </div>

            </div>
            <div class="modal-footer ">
                <button class="btn btn-primary btn-sm px-3 mr-2" onclick="sendMail(); return false" inputtype="text" aria-describedby="email-subject" placeholder="Subject">Send</button>
